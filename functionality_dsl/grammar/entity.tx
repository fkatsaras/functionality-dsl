import utils
import expression
import integration

AttrType:
  'string' | 'int' | 'float' | 'number' | 'bool' | 'datetime' | 'uuid' | 'dict' | 'list'
;

AttrValue:
  STRING | FLOAT | INT | Bool
;

Attribute:
    ComputedAttribute | SchemaAttribute  
;

SchemaAttribute:
  name=ID ':' type=AttrType (optional?='?')?
  ('default=' default=AttrValue)?
;

ComputedAttribute:
  name=ID ':' type=AttrType (optional?='?')? '=' expr=Expr ';'
;

Input:
  alias=ID ':' target=[Entity]
;

Entity:
  'Entity' name=ID
  (
    ('source:' source=[ExternalSource])?   // still works via common
    ('inputs:' '-' inputs+=Input ('-' inputs+=Input)*)?
    ('attributes:' '-' attributes+=Attribute ('-' attributes+=Attribute)*)?
    ('where:' where=Expr)?
  )#
  'end'
;
