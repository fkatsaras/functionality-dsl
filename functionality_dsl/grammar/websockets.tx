import entity

EventName:
    'created' | 'updated' | 'deleted' | 'any'
;

// Minimal WS subscription: bind an entity to a WS path.
// Hosted on the single Server<HTTP> (no extra server fields needed).
Subscription:
    'Subscription' name=ID
    (
        ('path:' path=STRING)
        ('entity:' entity=[Entity])
        ('events:' events+=EventName[','])
    )#
    'end'
;