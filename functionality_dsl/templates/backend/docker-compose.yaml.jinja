version: "3.9"
services:
  backend:
    build: .
    container_name: {{ server.name | lower | replace(' ', '-') }}-backend
    ports:
      - "{{ server.port }}:{{ server.port }}"
    env_file:
      - .env
    restart: unless-stopped

  frontend:
    build:
      context: ./frontend
    container_name: {{ server.name | lower | replace(' ', '-') }}-frontend
    environment:
      # frontend talks to the backend service by its Docker name
      - VITE_API_URL=http://{{ server.name | lower | replace(' ', '-') }}-backend:{{ server.port }}
    ports:
      - "5173:5173"        # vite dev server
    depends_on:
      - backend
    restart: unless-stopped