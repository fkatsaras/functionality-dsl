# docker-compose.yml.jinja
version: "3.9"

services:
  backend:
    build: .
    container_name: {{ server.name | lower | replace(' ', '-') }}-backend
    ports:
      - "{{ server.port }}:{{ server.port }}"
    env_file:
      - .env
    restart: unless-stopped

  frontend:
    {% if server.env == 'dev' %}
    # ===================== DEV (HMR) =====================
    image: node:20-alpine
    working_dir: /app
    container_name: {{ server.name | lower | replace(' ', '-') }}-frontend
    environment:
      - VITE_API_URL=http://{{ server.name | lower | replace(' ', '-') }}-backend:{{ server.port }}
      - VITE_ENV=dev
      - VITE_HMR_POLLING=1
      - VITE_POLL_INTERVAL=200
      - CHOKIDAR_USEPOLLING=1
    volumes:
      - ./frontend:/app
      - /app/node_modules
    command: >
      sh -c "npm install --no-fund --no-audit && npm run dev -- --host"
    ports:
      - "5173:5173"
    depends_on:
      - backend
    restart: unless-stopped
    {% else %}
    # ===================== PROD =====================
    build:
      context: ./frontend
    container_name: {{ server.name | lower | replace(' ', '-') }}-frontend
    environment:
      - VITE_API_URL=http://{{ server.name | lower | replace(' ', '-') }}-backend:{{ server.port }}
    ports:
      - "5173:5173"
    depends_on:
      - backend
    restart: unless-stopped
    {% endif %}
