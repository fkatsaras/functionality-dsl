version: "3.9"

networks:
  fdsl_net:
    driver: bridge

services:
  backend:
    {% if server.env == 'dev' %}
    # ===================== DEV (Hot Reload) =====================
    image: python:3.11-slim
    working_dir: /app
    container_name: {{ server.name | lower | replace(' ', '-') }}-backend
    environment:
      - PYTHONUNBUFFERED=1
      - FORCE_COLOR=1
      - ENV=dev
    volumes:
      - ./:/app                    # mount entire generated project (with pyproject.toml)
      - /app/__pycache__/          # ignore cached bytecode
    command: >
      sh -c "pip install --no-cache-dir .[dev] &&
             uvicorn app.main:app --host 0.0.0.0 --port {{ server.port }} --reload --reload-dir /app"
    ports:
      - "{{ server.port }}:{{ server.port }}"
    restart: unless-stopped
    tty: true
    networks:
      - fdsl_net
    {% else %}
    # ===================== PROD =====================
    build: .
    container_name: {{ server.name | lower | replace(' ', '-') }}-backend
    ports:
      - "{{ server.port }}:{{ server.port }}"
    env_file:
      - .env
    restart: unless-stopped
    tty: true
    networks:
      - fdsl_net
    {% endif %}
  frontend:
    {% if server.env == 'dev' %}
    # ===================== DEV (HMR) =====================
    image: node:20-alpine
    working_dir: /app
    container_name: {{ server.name | lower | replace(' ', '-') }}-frontend
    environment:
      - VITE_API_URL=http://{{ server.name | lower | replace(' ', '-') }}-backend:{{ server.port }}
      - VITE_ENV=dev
      - VITE_HMR_POLLING=1
      - VITE_POLL_INTERVAL=200
      - CHOKIDAR_USEPOLLING=1
    volumes:
      - ./frontend:/app
      - /app/node_modules
    command: >
      sh -c "npm install --no-fund --no-audit && npm run dev -- --host"
    ports:
      - "5173:5173"
    depends_on:
      - backend
    restart: unless-stopped
    networks:
      - fdsl_net
    {% else %}
    # ===================== PROD =====================
    build:
      context: ./frontend
    container_name: {{ server.name | lower | replace(' ', '-') }}-frontend
    environment:
      - VITE_API_URL=http://{{ server.name | lower | replace(' ', '-') }}-backend:{{ server.port }}
    ports:
      - "5173:5173"
    depends_on:
      - backend
    restart: unless-stopped
    networks:
      - fdsl_net
    {% endif %}
