APP_NAME={{ server.name }}
API_PREFIX=/api
DOCS_URL=/docs
OPENAPI_URL=/openapi.json

LOG_LEVEL={{ server.loglevel | upper }}
LOG_FORMAT=json

# HTTP Client Configuration
HTTP_TIMEOUT={{ server.timeout }}

# CORS (comma-separated for multiple)
BACKEND_CORS_RAW_ORIGINS={% if server.cors is string %}{{ server.cors }}{% else %}{{ server.cors | join(',') }}{% endif %}

SERVER_HOST={{ server.host }}
SERVER_PORT={{ server.port }}
{% if auth_env_vars %}
{% for auth_var in auth_env_vars %}

# {{ auth_var.comment }}
{{ auth_var.name }}={{ auth_var.value }}
{% endfor %}
{% endif %}
{% if jwt_secret_var and not auth_env_vars %}

# JWT Authentication Secret (auto-generated)
{{ jwt_secret_var }}={{ jwt_secret_value }}
{% endif %}
{% if uses_default_db %}

# Database Configuration (default FDSL user store)
# Uses 'db' as hostname for Docker Compose networking
DATABASE_URL=postgresql://{{ db_user }}:{{ db_password }}@db:{{ db_port }}/{{ db_name }}
{% elif external_db_url_var %}

# External Database Configuration
# Set this to your database connection string
{{ external_db_url_var }}=
{% endif %}