{# expects: actionPath, fields[]; optional: method, pathKey, submitLabel #}
<ActionForm
  name="{{ common.name }}"
  url="{{ (props.get('endpointPath') or '').rstrip('/') }}"
  method="{{ props.get('method', 'POST') }}"
  fields={{ "{" }}{{ (props.get('fields') or []) | tojson }}{{ "}" }}{% if props.get('pathKey') %}
  pathKey="{{ props['pathKey'] }}"{% endif %}
  submitLabel="{{ props.get('submitLabel') or 'Submit' }}"
/>