{% set path = common.endpointPath or props.get("endpointPath") %}
{% set label = props.get("label") or "Toggle" %}
{% set onLabel = props.get("onLabel") or "ON" %}
{% set offLabel = props.get("offLabel") or "OFF" %}
{% set field = props.get("field") or "state" %}
{% set initial = props.get("initial") or false %}

<Toggle
  name="{{ common.name }}"
  endpointPath="{{ path }}"
  label="{{ label }}"
  onLabel="{{ onLabel }}"
  offLabel="{{ offLabel }}"
  field="{{ field }}"
  initial="{{ initial }}"
/>