// ------------------- Server -------------------
Server BinanceWS
  host: "localhost"
  port: 8080
  cors: "http://localhost:3000"
end

// ------------------- External WebSocket ----------------
ExternalWS BTCUSDT
  url: "wss://stream.binance.com:9443/ws/btcusdt@ticker"
  protocol: "json"
  mode: subscribe
end

// ------------------- Raw Entity (snapshot from WS) ----------------
Entity BTCRaw
  source: BTCUSDT
  attributes:
    - c: float = BTCUSDT["c"];  // last price in string number at key "c"
end

// ------------------- Computed Entity -------------------
Entity Prices(BTCRaw)
  attributes:
    - tick: dict = { "t": now(), "btc": BTCRaw.c };
end

// ------------------- Internal endpoint (UI consumes this) ---------
InternalWS PricesStream
  entity: Prices
  mode: subscribe
  path: "/api/prices"
end

// ------------------- Component (bound to internal endpoint) -------
Component<LineChart> BitcoinPrice
  endpoint: PricesStream
  rows: data.tick
  seriesLabels: ["BTC Price"]
  xLabel: "Time"
  yLabel: "USDT"
end

