// ------------------- Server -------------------
Server BinanceWS
  host: "localhost"
  port: 8080
  cors: "http://localhost:3000"
  // env: dev
end

// ------------------- WebSockets ----------------
WSEndpoint BTCUSDT
  url: "wss://stream.binance.com:9443/ws/btcusdt@ticker"
  protocol: "json"
end

// ------------------- Raw Entities (WS snapshots) ------------------
Entity BTCRaw
  source: BTCUSDT
  attributes:
    - c: float     // last price in string number at key "c"
end

// ------------------- Aggregated, computed stream ------------------
Entity Prices
  inputs:
    - btc: BTCRaw
  attributes:
    - t   = now()
    - btc = btc.c
end

// ------------------- Component ----------------
Component<LineChart> BitcoinPrice
  entity: Prices
  x: data.t
  y: [data.btc]
  xLabel: "Time"
  yLabel: "USDT"
end
