// ------------------- Server -------------------
Server BinanceWS
  host: "localhost"
  port: 8080
  cors: "http://localhost:3000"
end

// ------------------- External WebSocket ----------------
Source<WS> BTCUSDT
  channel: "wss://stream.binance.com:9443/ws/btcusdt@ticker"
  subscribe:
    type: object
    entity: BTCRaw
end

// ------------------- Raw Entity (snapshot from WS) ----------------
Entity BTCRaw
  attributes:
    - c: number;
end

// ------------------- Computed Entity -------------------
Entity Prices(BTCRaw)
  attributes:
    - tick: object = { "t": now(), "btc": BTCRaw.c };
end

// ------------------- Internal endpoint ---------
Endpoint<WS> PricesStream
  channel: "/api/prices"
  subscribe:
    type: object
    entity: Prices
end

// ------------------- Component (bound to internal endpoint) -------
Component<LiveChart> BitcoinPrice
  endpoint: PricesStream
  values: tick
  seriesLabels: ["BTC Price"]
  xLabel: string<datetime> "Time"
  yLabel: string "USDT"
end
