// ----------- Minimal header -----------
Server TestAPI
  host: "localhost"
  port: 8080
  cors: "http://localhost:3000"
end

RESTEndpoint Soil1
  url: "http://localhost:8080/api/soil/z1"
  method: GET
end

RESTEndpoint Soil2
  url: "http://localhost:8080/api/soil/z2"
  method: GET
end

Entity MoistureZone1
  source: Soil1
  attributes:
    - timestamp: datetime
    - moisture_percent: number
end

Entity MoistureZone2
  source: Soil2
  attributes:
    - timestamp: datetime
    - moisture_percent: number
end

// Entities -------------------------------

Entity E1
  inputs:
    - z1: MoistureZone1
    - z2: MoistureZone2
  attributes:
    - a = 1 + 2 * 3 - 4 / 2 % 2
    - b = z1.moisture_percent + z2.moisture_percent * 2
end
