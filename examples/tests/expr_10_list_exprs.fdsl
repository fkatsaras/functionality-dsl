// ----------- Minimal header -----------
Server TestAPI
  host: "localhost"
  port: 8080
  cors: "http://localhost:3000"
end

RESTEndpoint Soil1
  url: "http://localhost:8080/api/soil/z1"
  verb: GET
end

RESTEndpoint Soil2
  url: "http://localhost:8080/api/soil/z2"
  verb: GET
end

Entity MoistureZone1
  source: Soil1
  attributes:
    - timestamp: datetime
    - moisture_percent: float
end

Entity MoistureZone2
  source: Soil2
  attributes:
    - timestamp: datetime
    - moisture_percent: float
end

Entity E10
  inputs:
    - z1: MoistureZone1
    - z2: MoistureZone2
  attributes:
    - xs = [1, z1.moisture_percent, if z2.moisture_percent > 50 then 99 else 0]
end