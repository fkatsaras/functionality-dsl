// Test: type=array with single-attribute entity (valid wrapper)
// Expected: PASS
Server TestServer
  host: "localhost"
  port: 8080
end

Entity Item
  attributes:
    - id: string;
    - name: string;
end

Entity ItemsWrapper
  attributes:
    - items: array<Item>;
end

Source<REST> ItemsAPI
  url: "http://api.example.com/items"
  method: GET
  response:
    type: array
    entity: ItemsWrapper
end

Endpoint<REST> GetItems
  path: "/api/items"
  method: GET
  response:
    type: array
    entity: ItemsWrapper
end
