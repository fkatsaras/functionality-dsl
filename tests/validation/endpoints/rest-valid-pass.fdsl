// Test: Valid REST endpoint
// Expected: PASS
Server TestServer
  host: "localhost"
  port: 8080
end

Entity ProductRaw
  attributes:
    - id: string;
    - name: string;
end

Entity ProductView(ProductRaw)
  attributes:
    - displayName: string = upper(ProductRaw.name);
end

Source<REST> ProductAPI
  url: "http://api.example.com/products"
  method: GET
  response:
    type: object
    entity: ProductRaw
end

Endpoint<REST> GetProducts
  path: "/api/products"
  method: GET
  response:
    type: object
    entity: ProductView
end
