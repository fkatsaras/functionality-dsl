// Test: WebSocket endpoint with orphan subscribe entity
// Expected: FAIL - Subscribe entity must be sourced or computed
Server TestServer
  host: "localhost"
  port: 8080
end

Entity OrphanMessage
  attributes:
    - text: string;
end

Entity InputMessage
  attributes:
    - msg: string;
end

Endpoint<WS> Chat
  channel: "/ws/chat"
  subscribe:
    type: object
    entity: OrphanMessage
  publish:
    type: object
    entity: InputMessage
end
